extends ../../layouts/pay-layout

block content

	.single-form.get-started

		h1.single-form__title.single-form__title--pay Welcome to Tiny Love
			
		form.single-form__form(action="https://www.sandbox.paypal.com/cgi-bin/webscr", method="post", target="_top")
		
			p We’ve created an account for you. Now let’s take care of the payment and get you started on the course materials!
			
			input(type="hidden", name="cmd", value="_s-xclick")
			
			input(type="hidden", name="hosted_button_id", value="NWSMR9SXJSJLA")
			
			input.buy-button(type="image", src="https://www.paypalobjects.com/webstatic/en_US/i/buttons/buy-logo-large.png", border="0", name="submit", alt="Buy now with PayPal")
			
			img(alt="", border="0", src="https://www.sandbox.paypal.com/en_US/i/scr/pixel.gif", width="1", height="1")
