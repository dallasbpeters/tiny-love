extends ../../layouts/pay-layout

block content

	.single-form.get-started

		h1.single-form__title.single-form__title--pay Welcome to Tiny Love
		
		form.single-form__form(action='https://www.paypal.com/cgi-bin/webscr', method='post', target='_top')
		
			p We gladly accept payments! We ask that you pay $115 at checkout and then three equal payments of $115 over the next three months. Once we recive your initial payment you will have access to course materials within the next 24 hours.
			
			input(type='hidden', name='cmd', value='_s-xclick')
			input(type='hidden', name='hosted_button_id', value='BE3N54M74ZJBY')
			input(type='hidden', name='on0', value='plan')
			input(type='hidden', name='os0', value='option_0')
			input(type='image', src='https://www.paypalobjects.com/en_US/i/btn/btn_installment_plan_CC_LG.gif', border='0', name='submit', alt='PayPal - The safer, easier way to pay online!')
			img(alt='', border='0', src='https://www.paypalobjects.com/en_US/i/scr/pixel.gif', width='1', height='1')
